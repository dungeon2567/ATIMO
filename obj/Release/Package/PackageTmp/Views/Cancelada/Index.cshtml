@model IEnumerable<ATIMO.Models.OSSB>

@{
    ViewBag.Title = "Átimo - Finalizadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuOperacional")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-remove"></i>
                    <h3>CANCELADAS</h3>
                </div>

                <div class="widget-content">
                    <p>
                        @Html.ActionLink("Voltar para Operacional", "Index", "Operacional")
                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        PROJETO
                                    </th>

                                    <th>
                                        CLIENTE
                                    </th>

                                    <th>
                                        CONTRATO
                                    </th>

                                    <th>
                                        OCORRENCIA
                                    </th>

                                    <th>
                                        PORTE
                                    </th>

                                    <th>
                                        TIPO
                                    </th>

                                    <th>
                                        AMBIENTE
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayTextFor(modelItem => item.PROJETO1.DESCRICAO)
                                        </td>

                                        <td>
                                            @Html.DisplayTextFor(modelItem => item.PESSOA.RAZAO)
                                        </td>

                                        <td>
                                            @Html.DisplayTextFor(modelItem => item.CONTRATO1.DESCRICAO)
                                        </td>

                                        <td>
                                            @Html.DisplayTextFor(modelItem => item.OCORRENCIA)
                                        </td>

                                        <td>
                                            @Html.DisplayTextFor(modelItem => item.PORTE)
                                        </td>

                                        @switch (item.TIPO)
                                        {
                                            case "C":
                                                <td>
                                                    <span class="label label-info">CORRETIVA</span>
                                                </td>
                                                break;
                                            case "E":
                                            <td>
                                                <span class="label label-danger">EMERGENCIAL</span>
                                            </td>
                                                break;
                                            case "G":
                                            <td>
                                                <span class="label label-warning">GARANTIA</span>
                                            </td>
                                                break;
                                            case "O":
                                            <td>
                                                <span class="label label-warning">ACOMPANHAMENTO</span>
                                            </td>
                                                break;
                                            case "X":
                                            <td>
                                                <span class="label label-success">EXTRA CONTRATUAL</span>
                                            </td>
                                                break;
                                            default:
                                            <td>
                                                <span class="label label-success">PREVENTIVA</span>
                                            </td>
                                                break;
                                        }

                                        @switch (item.AMBIENTE)
                                        {
                                            case "A":
                                                <td>
                                                    <span class="label label-danger">AMBOS</span>
                                                </td>
                                                break;
                                            case "E":
                                            <td>
                                                <span class="label label-success">EXTERNO</span>
                                            </td>
                                                break;
                                            default:
                                            <td>
                                                <span class="label label-default">INTERNO</span>
                                            </td>
                                                break;
                                        }

                                        <td class="col-md-3">
                                            <a class="btn btn-info" href="~/Cancelada/Edit/@item.ID">
                                                <i class="fa fa-edit"></i>
                                                Visualizar Informações da OS
                                            </a>

                                            <a class="btn btn-success" href="~/OssbServico/Index/@item.ID">
                                                <i class="fa fa-wrench"></i>
                                                Serviços
                                            </a>

                                            <a class="btn btn-danger" onclick="GerarContasPagar(@item.ID)">
                                                <i class="fa fa-money"></i>
                                                Gerar Contas a Pagar
                                            </a>

                                            <a class="btn btn-warning" href="~/OssbComunicacao/Index/@item.ID">
                                                <i class="fa fa-comments-o"></i>
                                                Comunicação com Cliente
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
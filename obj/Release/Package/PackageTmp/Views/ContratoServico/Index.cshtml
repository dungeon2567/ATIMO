@model ATIMO.ViewModel.ContratoServicoViewModel


@{
    ViewBag.Title = "Átimo - OSSB Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuOperacional")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-wrench"></i>
                    <h3>CONTRATO/SERVIÇOS</h3>
                </div>

                <div class="widget-content">
                    <p>
                        @Html.ActionLink("Incluir Novo", "Create", new { id = @Model.Contrato })

                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        AREA DE MANUTENÇÂO
                                    </th>

                                    <th>
                                        SERVIÇO
                                    </th>

                                    <th>
                                        TERCEIRO
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Lista)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AREA_MANUTENCAO1.DESCRICAO)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SERVICO1.DESCRICAO)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.PESSOA.RAZAO)
                                        </td>

                                        <td>
                                            <a class="btn btn-info" href="~/ContratoServico/Edit/@item.ID">
                                                    <i class="fa fa-edit"></i>
                                                    Editar
                                            </a>
                                       </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")
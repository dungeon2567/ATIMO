
@{
    ViewBag.Title = "Átimo - Contas a Pagar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuFinanceiro")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-group"></i>
                    <h3>RELATÓRIO GERAL</h3>
                </div>
                <div class="widget-content">
                    <div class="form-group col-md-12" style="text-align: center;">
                        ENTRADA
                    </div>

                    <div class="form-group col-md-4">
                        <div>
                            <label>OSSB</label>
                        </div>

                        <div class="editor-field">
                            <input id="entrada-ossb" class="form-control input-lg uppercase" maxlength="10">
                        </div>
                    </div>

                    <div class="form-group col-md-8">
                        <div>
                            <label>TIPO</label>
                        </div>

                        <div class="editor-field">
                            <select id="entrada-tipo">
                                <option selected></option>
                                <option value="F">FIXO</option>
                                <option value="V">VARIÁVEL</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group col-md-12">
                        <div>
                            <label>PROJETO</label>
                        </div>

                        <div class="editor-field">
                            @Html.DropDownList("PROJETO", null, "", new { id = "entrada-projeto" })
                        </div>
                        <hr />
                    </div>

                    <div class="form-group col-md-12" style="text-align: center;">
                        SAÍDA
                    </div>

                    <div class="form-group col-md-4">
                        <div>
                            <label>OSSB</label>
                        </div>

                        <div class="editor-field">
                            <input id="saida-ossb" class="form-control input-lg uppercase" maxlength="10">
                        </div>
                    </div>

                    <div class="form-group col-md-8">
                        <div>
                            <label>TIPO</label>
                        </div>

                        <div class="editor-field">
                            <select id="saida-tipo">
                                <option selected></option>
                                <option value="F">FIXO</option>
                                <option value="V">VARIÁVEL</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group col-md-12">
                        <div>
                            <label>PROJETO</label>
                        </div>

                        <div class="editor-field">
                            @Html.DropDownList("PROJETO", null, "", new { id = "saida-projeto" })
                        </div>
                        <hr />
                    </div>

                    <div class="form-group col-md-12" style="text-align: center;">
                        COMUM
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>DE</label>
                        </div>

                        <div class="editor-field">
                            <input id="de" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>ATÉ</label>
                        </div>

                        <div class="editor-field">
                            <input id="ate" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>POR</label>
                        </div>

                        <div class="editor-field">
                            <select id="por">
                                <option selected value="D">DIA</option>
                                <option value="M">MÊS</option>
                                <option value="A">ANO</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button type="button" data-toggle="tooltip" data-placement="right" title="" class="btn btn-info" data-original-title="Clique para pesquisar." onclick="pesquisar();">
                            <i class="glyphicon glyphicon-search"></i>
                            Gerar Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {

    <script src="../../Scripts/bootstrap-datepicker.js"></script>
    <script src="../../Scripts/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <link href="../../Content/bootstrap-datepicker.css" rel="stylesheet" />

    <script>

        $(".datepicker").datepicker({
            maxViewMode: 0,
            todayBtn: "linked",
            language: "pt-BR",
            autoclose: true,
            toggleActive: true
        });

        function pesquisar() {
            var params = {

            };

            if ($("#de").val() != "") {
                params.de = $("#de").val();
            }

            if ($("#ate").val() != "") {
                params.ate = $("#ate").val();
            }

            if ($("#entrada-tipo").val() != "") {
                params.entrada_tipo = $("#entrada-tipo").val();
            }

            if ($("#entrada-ossb").val() != "") {
                params.entrada_ossb = $("#entrada-ossb").val();
            }

            if ($("#entrada-projeto").val() != "") {
                params.entrada_projeto = $("#entrada-projeto").val();
            }


            if ($("#saida-tipo").val() != "") {
                params.saida_tipo = $("#saida-tipo").val();
            }

            if ($("#saida-ossb").val() != "") {
                params.saida_ossb = $("#saida-ossb").val();
            }

            if ($("#saida-projeto").val() != "") {
                params.saida_projeto = $("#saida-projeto").val();
            }

            if ($("#por").val() != "") {
                params.por = $("#por").val();
            }

            location.href = "/RelatorioGeral/Index/?" + jQuery.param(params, true);
        }
    </script>
}
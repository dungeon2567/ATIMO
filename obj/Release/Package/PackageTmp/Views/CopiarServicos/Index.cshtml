
@{
    ViewBag.Title = "Átimo - Copiar serviços de uma O.S para outra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuGerencial")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-group"></i>
                    <h3>Copiar serviços de uma O.S para outra</h3>
                </div>
                <div class="widget-content">


                    <div class="form-group col-md-6">
                        <div>
                            <label>DE</label>
                        </div>

                        <div class="editor-field">
                            <input id="de" class="form-control input-lg" maxlength="10" placeholder="NUM O.S"/>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div>
                            <label>PARA</label>
                        </div>

                        <div class="editor-field">
                            <input id="para" class="form-control input-lg" maxlength="10" placeholder="NUM O.S"/>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button type="button" data-toggle="tooltip" id="copiar" data-placement="right" title="" class="btn btn-info" data-original-title="Clique para pesquisar." onclick="pesquisar();">
                            <i class="glyphicon glyphicon-search"></i>
                            Copiar Serviços
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {

    <script>

        function pesquisar() {
            var params = {

            };

            if ($("#de").val() != "") {
                params.de = $("#de").val();
            }

            if ($("#para").val() != "") {
                params.para = $("#para").val();
            }

            location.href = "/CopiarServicos/Copiar/?" + jQuery.param(params, true);

            $('#copiar').prop("disabled", true);
        }
    </script>
}
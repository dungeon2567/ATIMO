
@{
    ViewBag.Title = "Átimo - Relatório Gastos x Ganhos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuGerencial")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-group"></i>
                    <h3>Relatório Gastos x Ganhos</h3>
                </div>
                <div class="widget-content">


                    <div class="form-group col-md-12">
                        <div>
                            <label>DE</label>
                        </div>

                        <div class="editor-field">
                            <input id="de" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>ATÉ</label>
                        </div>

                        <div class="editor-field">
                            <input id="ate" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>PROJETO</label>
                        </div>

                        <div class="editor-field">
                            @Html.DropDownList("PROJETO", null, "SELECIONE UM PROJETO", new { id = "projeto" })
                        </div>
                        <hr />
                    </div>


                    <div class="col-md-12">
                        <button type="button" data-toggle="tooltip" data-placement="right" title="" class="btn btn-info" data-original-title="Clique para pesquisar." onclick="pesquisar();">
                            <i class="glyphicon glyphicon-search"></i>
                            Gerar Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {

    <script src="../../Scripts/bootstrap-datepicker.js"></script>
    <script src="../../Scripts/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <link href="../../Content/bootstrap-datepicker.css" rel="stylesheet" />

    <script>

        $(".datepicker").datepicker({
            maxViewMode: 0,
            todayBtn: "linked",
            language: "pt-BR",
            autoclose: true,
            toggleActive: true
        });

        function pesquisar() {
            var params = {

            };

            if ($("#de").val() != "") {
                params.de = $("#de").val();
            }

            if ($("#ate").val() != "") {
                params.ate = $("#ate").val();
            }

            if ($("#projeto").val()) {
                params.projeto = $("#projeto").val();

            }
            location.href = "/RelatorioGastosGanhos/Index/?" + jQuery.param(params, true);
        }
    </script>
}
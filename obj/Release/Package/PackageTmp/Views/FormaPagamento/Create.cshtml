@model ATIMO.Models.FORMA_PAGAMENTO

@{
    ViewBag.Title = "ÁTIMO - Formas de Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-cc-visa"></i>
                    <h3>FORMAS DE PAGAMENTO - NOVO</h3>
                </div>

                <div class="widget-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-check-square-o"></i> Salvar
                                </button>

                                |
                                <a class="btn btn-danger" href="~/FormaPagamento/Index">
                                    <i class="fa fa-rotate-left"></i>
                                    Voltar
                                </a>

                                <hr />
                            </div>

                            <div class="form-group col-md-10">
                                <div>
                                    <label>DESCRIÇÃO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.DESCRICAO, new { @class = "form-control input-lg uppercase requirido", maxlength = "200", placeholder = "DESCRIÇÃO", id = "descricao", required = "" })
                                </div>
                            </div>

                            <div class="form-group col-md-2">
                                <div>
                                    <label>SITUAÇÃO</label>
                                </div>

                                <select class="editor-field" id="situacao" name="SITUACAO" required="">
                                    @if ((Model != null) && (Model.SITUACAO == "A"))
                                    {
                                        <option value="A" selected="selected">ATIVO</option>
                                    }
                                    else
                                    {
                                        <option value="A">ATIVO</option>
                                    }


                                    @if ((Model != null) && (Model.SITUACAO == "I"))
                                    {
                                        <option value="I" selected="selected">INATIVO</option>
                                    }
                                    else
                                    {
                                        <option value="I">INATIVO</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group col-md-5">
                                <div>
                                    <label>BANCO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.DropDownList("BANCO", null, "SELECIONE UM BANCO", new { required = "", id = "banco" })
                                </div>
                            </div>

                            <div class="form-group col-md-3">
                                <div>
                                    <label>AGENCIA</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.AGENCIA, new { @class = "form-control input-lg uppercase requirido", maxlength = "200", placeholder = "AGÊNCIA", id = "agencia", required = "" })
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <div>
                                    <label>NÚMERO DA CONTA</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.NUMERO_CONTA, new { @class = "form-control input-lg uppercase requirido", maxlength = "200", placeholder = "NÚMERO DA CONTA", id = "numero_conta", required = "" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <hr />

                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-check-square-o"></i> Salvar
                                </button>

                                |
                                <a class="btn btn-danger" href="~/FormaPagamento/Index">
                                    <i class="fa fa-rotate-left"></i>
                                    Voltar
                                </a>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
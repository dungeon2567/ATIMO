@model IEnumerable<ATIMO.Models.PESSOA>

@{
    ViewBag.Title = "Átimo - Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-group"></i>
                    <h3>FORNECEDORES</h3>
                </div>
                <div class="widget-content">
                    <div class="col-md-12">
                        <a class="btn btn-success" href="~/Fornecedor/Create">
                            <i class="fa fa-plus-square-o"></i>
                            Incluir Novo
                        </a> |

                        <a class="btn btn-danger" href="~/AreaDoFuncionario/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar para Cadastros
                        </a>

                        <hr />
                        <br />
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    TIPO
                                </th>

                                <th>
                                    CPF/CNPJ
                                </th>

                                <th>
                                    NOME/RAZÃO SOCIAL
                                </th>

                                <th>
                                    SITUAÇÂO
                                </th>

                                <th>
                                    AÇÕES
                                </th>
                            </tr>
                            </thead>

                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @switch (item.TIPO_DOC)
                                    {
                                        case "F":
                                            <td>
                                                <span class="label label-info">P. FÍSICA</span>
                                            </td>
                                            break;
                                        default:
                                            <td>
                                                <span class="label label-success">P. JURÍDICA</span>
                                            </td>
                                            break;
                                    }

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NUM_DOC)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.RAZAO)
                                    </td>

                                    @switch (item.SITUACAO)
                                    {
                                        case "A":
                                            <td>
                                                <span class="label label-success">ATIVO</span>
                                            </td>
                                            break;
                                        default:
                                            <td>
                                                <span class="label label-default">INATIVO</span>
                                            </td>
                                            break;
                                    }

                                    <td>
                                        <a class="btn btn-info" href="~/Fornecedor/Edit/@item.ID">
                                            <i class="fa fa-edit"></i>
                                            Editar
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <hr />
                        <a class="btn btn-success" href="~/Fornecedor/Create">
                            <i class="fa fa-plus-square-o"></i>
                            Incluir Novo
                        </a> |

                        <a class="btn btn-danger" href="~/AreaDoFuncionario/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar para Cadastros
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")
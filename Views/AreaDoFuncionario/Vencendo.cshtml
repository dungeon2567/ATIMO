@model IEnumerable<ATIMO.Models.OSSB>

@using System.Globalization;

@{
    ViewBag.Title = "ÁTIMO - VENCENDO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-book"></i>
                    <h3>O.S VENCENDO</h3>
                </div>

                <div class="widget-content">
                    <div class="col-md-12">
                        <a class="btn btn-danger" href="~/AreaDoFuncionario/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar
                        </a>

                        <hr />
                        <br />
                    </div>

                    <div class="col-md-12 table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                <tr>
                                    <th>
                                        NÚMERO
                                    </th>

                                    <th>
                                        CLIENTE
                                    </th>

                                    <th>
                                        LOJA
                                    </th>

                                    <th>
                                        PREVISÃO
                                    </th>

                                    <th>
                                        TIPO
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr @(item.PESSOA.NUM_DOC == "" ? "class=danger" : "")>
                                        <td id="ossb_@item.ID">
                                            @item.ID
                                        </td>

                                        <td>
                                            @item.PESSOA.NOME

                                        </td>

                                        <td>
                                           @(item.LOJA  != null ? @item.LOJA1.APELIDO : "")
                                        </td>

                                        <td>
                                            @(item.OSSB_CHECK_LIST.Where(ocl => ocl.VISITADO == null).Min(ocl => ocl.AGENDADO).ToString("dd/MM/yyyy"))
                                        </td>

                                        <td>
                                            <span>@item.TEXTO_TIPO @(item.CONTRATO != null ? "(" + item.CONTRATO1.DESCRICAO + ")" : "")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
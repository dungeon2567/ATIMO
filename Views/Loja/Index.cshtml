@model ATIMO.ViewModel.LojaIndexViewModel

@{
    ViewBag.Title = "Átimo - Pessoa/Lojas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-archive"></i>
                    <h3>LOJAS</h3>
                </div>

                <div class="widget-content">
                    <p>
                        <a class="btn btn-success" href="~/Loja/Create/@Model.CLIENTE">
                            <i class="fa fa-plus-square-o"></i>
                            Incluir Novo
                        </a> |

                        <a class="btn btn-danger" href="~/Pessoa/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar
                        </a>
                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>

                                    <th>
                                        Nº DOCUMENTO
                                    </th>

                                    <th>
                                        APELIDO
                                    </th>

                                    <th>
                                        SITUAÇÂO
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.LOJAS.Select((loja, index)=> new { Index=index, Loja=loja}))
                                {
                                    <tr>
                                        <td>
                                            <span>@(item.Index + 1)</span>
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Loja.NUM_DOC)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Loja.APELIDO)
                                        </td>

                                        @if (item.Loja.SITUACAO == "A")
                                        {
                                            <td>
                                                <span class="label label-success">ATIVO</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="label label-default">INATIVO</span>
                                            </td>
                                        }

                                        <td>
                                            <a class="btn btn-info" href="~/Loja/Edit/@item.Loja.ID">
                                                <i class="fa fa-edit"></i>
                                                Editar
                                            </a>

                                            <a class="btn btn-warning" href="~/LojaEquipamento/Index/@item.Loja.ID">
                                                <i class="fa fa-laptop"></i>
                                                Equipamentos
                                            </a>

                                            <a class="btn btn-danger" href="~/OssbRecorrencia/Create/@item.Loja.ID">
                                                <i class="fa fa-balance-scale"></i>
                                                Recorrência
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")
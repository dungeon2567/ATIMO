
@{
    ViewBag.Title = "Átimo - Relatório Pagamento de Terceiros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuFinanceiro")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-group"></i>
                    <h3>RELATÓRIO PAGAMENTO DE TERCEIROS</h3>
                </div>
                <div class="widget-content">

                    <div class="form-group col-md-12">
                        <div>
                            <label>TERCEIRO</label>
                        </div>

                        <div class="editor-field">
                            <select id="terceiro"></select>
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>DE</label>
                        </div>

                        <div class="editor-field">
                            <input id="de" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div>
                            <label>ATÉ</label>
                        </div>

                        <div class="editor-field">
                            <input id="ate" class="form-control input-lg datepicker" maxlength="10" alt="date" />
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button type="button" data-toggle="tooltip" data-placement="right" title="" class="btn btn-info" data-original-title="Clique para pesquisar." onclick="pesquisar();">
                            <i class="glyphicon glyphicon-search"></i>
                            Gerar Relatório
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {

    <script src="../../Scripts/bootstrap-datepicker.js"></script>
    <script src="../../Scripts/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <link href="../../Content/bootstrap-datepicker.css" rel="stylesheet" />


    <script src="../../Scripts/select2/js/select2.min.js"></script>
    <link href="../../Scripts/select2/css/select2.min.css" rel="stylesheet" />
    <link href="../../Scripts/select2/css/select2-bootstrap.min.css" rel="stylesheet" />

    <script>

        $(".datepicker").datepicker({
            maxViewMode: 0,
            todayBtn: "linked",
            language: "pt-BR",
            autoclose: true,
            toggleActive: true
        });

        $("#terceiro").select2({
            ajax: {
                url: function (params) {
                    if (params.term) {
                        return "/RelatorioTerceiro/GetTerceiros/?query=" + encodeURIComponent(params.term);
                    }
                    else {
                        return "/RelatorioTerceiro/GetTerceiros/?query=" + encodeURIComponent("");
                    }
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;

                    return {
                        results: data.terceiros,
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    }
                },
            },
            minimumInputLength: 1,

            placeholder: {
                id: 0,
                text: "NOME DO TERCEIRO"
            },

            delay: 250,

            theme: "bootstrap"
        });

        function pesquisar() {
            var params = {

            };

            if ($("#terceiro").val() != "") {
                params.terceiro = $("#terceiro").val();
            }

            if ($("#de").val() != "") {
                params.de = $("#de").val();
            }

            if ($("#ate").val() != "") {
                params.ate = $("#ate").val();
            }

            location.href = "../RelatorioTerceiro/Index/?" + jQuery.param(params, true);
        }
    </script>
}
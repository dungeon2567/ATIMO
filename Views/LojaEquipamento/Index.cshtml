@model ATIMO.ViewModel.LojaEquipamentoViewModel

@{
    ViewBag.Title = "Átimo - Pessoa/Lojas/Equipamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-archive"></i>
                    <h3>LOJAS/EQUIPAMENTOS</h3>
                </div>

                <div class="widget-content">
                    <p>
                        <a class="btn btn-success" href="~/LojaEquipamento/Create/@Model.LOJA">
                            <i class="fa fa-plus-square-o"></i>
                            Incluir Novo
                        </a> |

                        <a class="btn btn-danger" href="~/Pessoa/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar
                        </a>
                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        TAG
                                    </th>

                                    <th>
                                        SETOR
                                    </th>

                                    <th>
                                        SUBSETOR
                                    </th>

                                    <th>
                                        TIPO DE EQUIPAMENTO
                                    </th>

                                    <th>
                                        MODELO
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var le in Model.EQUIPAMENTOS)
                                {
                                    <tr>
                                        <td>
                                            @le.TAG
                                        </td>

                                        <td>
                                            @le.SETOR
                                        </td>

                                        <td>
                                            @le.SUBSETOR
                                        </td>

                                        <td>
                                            @le.TIPO1.DESCRICAO
                                        </td>

                                        <td>
                                            @le.MODELO1.DESCRICAO
                                        </td>
                                        <td>
                                            <a class="btn btn-info" href="~/LojaEquipamento/Edit/@le.ID">
                                                <i class="fa fa-edit"></i>
                                                Editar
                                            </a>

                                            @using (Html.BeginForm("EnviarImagem", "LojaEquipamento", new { id = le.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                            {
                                                <label class="btn btn-default btn-file">
                                                    Upload <input type="file" name="file" style="display: none;" onchange="this.form.submit();">
                                                </label>
                                            }

                                            @if (le.IMAGEM != null)
                                            {
                                                <a class="btn btn-info" href="~/LojaEquipamento/BaixarImagem/@le.ID">Download</a>
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")
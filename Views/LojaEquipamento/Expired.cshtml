@model IEnumerable<ATIMO.Models.LOJA_EQUIPAMENTO>

@{
    ViewBag.Title = "Átimo - Pessoa/Lojas/Equipamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-archive"></i>
                    <h3>LOJAS EQUIPAMENTOS</h3>
                </div>

                <div class="widget-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        CLIENTE
                                    </th>

                                    <th>
                                        LOJA
                                    </th>

                                    <th>
                                        TAG
                                    </th>

                                    <th>
                                        SETOR
                                    </th>

                                    <th>
                                        SUBSETOR
                                    </th>

                                    <th>
                                        TIPO DE EQUIPAMENTO
                                    </th>

                                    <th>
                                        MODELO
                                    </th>

                                    <th>
                                        DATA DE VENCIMENTO
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var le in Model)
                                {
                                    <tr>
                                        <td>
                                            @le.LOJA1.CLIENTE1.NOME
                                        </td>

                                        <td>
                                            @le.LOJA1.APELIDO
                                        </td>

                                        <td>
                                            @le.TAG
                                        </td>

                                        <td>
                                            @le.SETOR
                                        </td>

                                        <td>
                                            @le.SUBSETOR
                                        </td>

                                        <td>
                                            @le.TIPO1.DESCRICAO
                                        </td>

                                        <td>
                                            @le.MODELO1.DESCRICAO
                                        </td>
                                        <td>
                                            @le.DATA_VENCIMENTO.Value.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            <a class="btn btn-info" href="/LojaEquipamento/Display/@le.ID">
                                                <i class="fa fa-edit"></i>
                                                Visualizar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")
@model ATIMO.Models.LOJA_EQUIPAMENTO

@{
    ViewBag.Title = "Átimo - Cliente/Loja/Equipamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-archive"></i>
                    <h3>PESSOAS/LOJA/EQUIPAMENTO - EDITAR</h3>
                </div>

                <div class="widget-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.LOJA)

                        <fieldset>
                            <div class="form-group col-md-6">
                                <div>
                                    <label>SETOR</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.SETOR, new { @class = "form-control input-lg", maxlength = "80", required = "" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>SUBSETOR</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.SUBSETOR, new { @class = "form-control input-lg", maxlength = "80", required = "" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>TIPO DE EQUIPAMENTO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.DropDownList("TIPO", null, "SELECIONE UM TIPO", new { required = "", id="tipo", name = "TIPO" })
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>MODELO</label>
                                </div>

                                <div class="editor-field">
                                    <select id="modelo" name="MODELO" required=""></select>
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>SÉRIE</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.SERIE, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>


                            <div class="form-group col-md-6">
                                <div>
                                    <label>NUM MODELO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.NUM_MODELO, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>TENSÃO NOMINAL</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.TENSAO_NOMINAL, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>CORRENTE NOMINAL</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.CORRENTE_NOMINAL, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>FABRICANTE</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.FABRICANTE, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>POTÊNCIA</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.POTENCIA, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>CAPACIDADE</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.CAPACIDADE, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>TAG</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.TAG, new { @class = "form-control input-lg", maxlength = "80" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>DATA DE FABRICAÇÃO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.DATA_FABRICACAO, new { @class = "form-control input-lg datepicker", maxlength = "10", alt = "date" })

                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div>
                                    <label>DATA DE VENCIMENTO</label>
                                </div>

                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.DATA_VENCIMENTO, new { @class = "form-control input-lg datepicker", maxlength = "10", alt = "date" })

                                </div>
                            </div>


                            <div class="col-md-12">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                |
                                @Html.ActionLink("Voltar", "Index", new { id = Model.LOJA })

                            </div>

                        </fieldset>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


@Html.Partial("Rodape")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="../../Scripts/bootstrap-datepicker.js"></script>
    <script src="../../Scripts/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <link href="../../Content/bootstrap-datepicker.css" rel="stylesheet" />

    <script>
        $(".datepicker").datepicker({
            maxViewMode: 0,
            todayBtn: "linked",
            language: "pt-BR",
            autoclose: true,
            toggleActive: true
        });

                @if(Model.MODELO != 0)
        {
            <text>
        $.getJSON("/LojaEquipamento/GetModelos/?tipo=" + $("#tipo").val(), function (data) {
                $("#modelo").html(data.map(function (item) {
                                if (item.id == @Model.MODELO){
                                    return "<option value='" + item.id + "' selected>" + item.desc + "</option>";
                                }
                                else
                                    return "<option value='" + item.id + "'>" + item.desc + "</option>";
                            }).join(""));
            })
            </text>
        }

        $("#tipo").change(function () {
            $.getJSON("/LojaEquipamento/GetModelos/?tipo=" + $("#tipo").val(), function (data) {
                $("#modelo").html(data.map(function (item) {
                    return "<option value='" + item.id + "'>" + item.desc + "</option>";
                            }).join(""));
            })
        });
    </script>
}
@model IEnumerable<ATIMO.Models.EMPRESA>

@{
    ViewBag.Title = "ÁTIMO - Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-book"></i>
                    <h3>EMPRESAS</h3>
                </div>

                <div class="widget-content">
                    <div class="col-md-12">
                        <a class="btn btn-success" href="~/Empresa/CreateOrEdit">
                            <i class="fa fa-plus-square-o"></i>
                            Incluir Novo
                        </a> |

                        <a class="btn btn-danger" href="~/AreaDoFuncionario/Index">
                            <i class="fa fa-rotate-left"></i>
                            Voltar para Cadastros
                        </a>

                        <hr />
                        <br />
                    </div>

                    <div class="col-md-12 table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        CNPJ
                                    </th>

                                    <th>
                                        NOME
                                    </th>

                                    <th>
                                        CARGA TRIBUTÁRIA
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span>@item.CNPJ</span>
                                        </td>
                                        <td>
                                            <span>@item.NOME</span>
                                        </td>
                                        <td>
                                            @if (item.PERC_CARGA_TRIB != null)
                                            {
                                                <span>@item.PERC_CARGA_TRIB.Value.ToString("N2")%</span>
                                            }
                                        </td>

                                        <td>
                                            <a class="btn btn-info" href="~/Empresa/CreateOrEdit/@item.ID" title="Editar">
                                                <i class="fa fa-edit"></i>
                                                Editar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
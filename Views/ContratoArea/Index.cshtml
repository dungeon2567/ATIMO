@model ATIMO.ViewModel.ContratoAreaManutencaoViewModel

@{
    ViewBag.Title = "Átimo - Contrato Loja/Área de Manutenção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("MenuAreaFuncionario")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-indent"></i>
                    <h3>CONTRATO LOJA / ÁREAS DE MANUTENÇÃO</h3>
                </div>

                <div class="widget-content">
                    <p>
                        @Html.ActionLink("Incluir Novo", "Create", new { id = Model.Contrato }) |
                        @Html.ActionLink("Voltar", "Index", "Contrato", new { id = Model.Cliente }, null)
                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        ÁREA DE MANUTENÇÃO
                                    </th>

                                    <th>
                                        SITUAÇÃO
                                    </th>

                                    <th>
                                        AÇÕES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Lista)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AREA_MANUTENCAO1.DESCRICAO)
                                        </td>

                                        @switch (item.SITUACAO)
                                        {
                                            case "A":
                                                <td>
                                                    <span class="label label-success">ATIVO</span>
                                                </td>
                                                break;
                                            default:
                                                <td>
                                                    <span class="label label-default">INATIVO</span>
                                                </td>
                                                break;
                                        }

                                        <td class="col-md-4">
                                            <a class="btn btn-info" href="~/ContratoArea/Edit/@item.ID">
                                                <i class="fa fa-edit"></i>
                                                Editar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("Rodape")